{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Annonces
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Annonce</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ annonce.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ annonce.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ annonce.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ annonce.prix }}</td>
            </tr>
            <tr>
                <th>Creationdate</th>
                <td>
                    {% if annonce.creationDate %}
                        {{ annonce.creationDate|date('Y-m-d H:i:s') }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Category</th>
                <td>
                    {% if annonce.category %}
                        {{ annonce.category.name }}
                    {% endif %}
                </td>
            </tr>
            </tbody>
        </table>

        {{ form_start(delete_form) }}
        <input type="submit" class="btn btn-danger" value="Delete">
        {{ form_end(delete_form) }}

        <br>
        <div class="btn-group-vertical">
            <a href="{{ path('annonces_index') }}" class="btn btn-secondary">Back to the list</a>
            <a href="{{ path('annonces_edit', { 'id': annonce.id }) }}" class="btn btn-secondary">Edit</a>
        </div>
    </div>
{% endblock %}
