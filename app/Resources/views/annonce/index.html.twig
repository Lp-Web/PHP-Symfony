{% extends 'base.html.twig' %}

{% block body %}
    <h1>Annonces list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Category</th>
                <th>Creationdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td><a href="{{ path('annonces_show', { 'id': annonce.id }) }}">{{ annonce.id }}</a></td>
                <td>{{ annonce.name }}</td>
                <td>{{ annonce.description }}</td>
                <td>{{ annonce.prix }}
                <td>
                    {% if annonce.category %}
                        {{ annonce.category.name }}
                    {% endif %}
                </td>
                <td>
                    {% if annonce.creationDate %}
                        {{ annonce.creationDate|date('Y-m-d H:i:s') }}
                    {% endif %}
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('annonces_show', { 'id': annonce.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('annonces_edit', { 'id': annonce.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('annonces_new') }}">Create a new annonce</a>
        </li>
    </ul>
{% endblock %}
